
#include <iostream>
#include <math.h>
using namespace std;

int main() {
    int n;
    cin>>n;
   int ans=0;
   int i=0;
   while(n!=0)
   {
       int bit=n&1;
       ans=(bit*pow(10,i)+ans);
       i++;
       n=n>>1;
   }
   
   cout<<ans;
    return 0;
}

//Here we use formula to find the answer [ answer=(bit*pow(10,i)+answer) ]
// for [pow] we include <math.h>
